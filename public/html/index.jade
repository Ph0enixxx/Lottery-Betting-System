doctype html
html(lang="en" ng-app="LotteryApp")
  head
    title= pageTitle
    link(rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap-theme.min.css")
    link(rel="stylesheet" href="css/main.css")
  body
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Lottery 
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#')首页
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | 彩票选种
                span.caret
              ul.dropdown-menu
                li
                  a(href='#/double-balls') 双色球
                li
                  a(href='#') 大乐透
                li.divider(role='separator')
                li
                  a(href='#') 11 选 5
                li
                  a(href='#') 11 选 3
                li.divider(role='separator')
                li
                  a(href='#') 快3
                li
                  a(href='#') 排列5
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | 账户
                span.caret
              ul.dropdown-menu
                li
                  a(href='#') 个人中心

    div(ng-view)
  script(type="text/javascript" src="bower_components/angular/angular.min.js")
  script(type="text/javascript" src="bower_components/angular-route/angular-route.min.js")
  script(type="text/javascript" src="bower_components/angular-animate/angular-animate.min.js")
  script(type="text/javascript" src="bower_components/angular-resource/angular-resource.min.js")
  script(type="text/javascript" src="bower_components/angular-touch/angular-touch.min.js")
  script(type="text/javascript" src="bower_components/jquery/dist/jquery.min.js")
  script(type="text/javascript" src="bower_components/bootstrap/dist/js/bootstrap.min.js")
  script(type="text/javascript" src="bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js")
  script(type="text/javascript" src="bower_components/underscore/underscore-min.js")

  script(type="text/javascript" src="js/app.js")
  script(type="text/javascript" src="js/utils.js")
  script(type="text/javascript" src="js/filter.js")
  script(type="text/javascript" src="components/main/main.controller.js")
  script(type="text/javascript" src="components/double-balls/double-balls.controller.js")
  script(type="text/javascript" src="components/authenticate/authenticate.controller.js")
